[Unit]
Description=Fileglancer Service
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/deploy/fileglancer-hub
ExecStart=/usr/local/bin/pixi run start
Restart=on-failure
RestartSec=5s
Environment=PATH=/usr/local/bin:/usr/bin:/bin
EnvironmentFile=/opt/deploy/fileglancer-hub/.env

[Install]
WantedBy=multi-user.target
